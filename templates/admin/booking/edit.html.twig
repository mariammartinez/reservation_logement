{% extends 'admin/base.html.twig' %}

{% block title %} HOLA {% endblock %}

{% block body %}

    <div class="container">
        <h2>Modifier la réservation n° {{ booking.id }}</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.startDate) }}
                {{ form_row(form.endDate) }}
                {{ form_row(form.comment) }}
            </div>
            <div class="col">
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i>
                    Modifier
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}