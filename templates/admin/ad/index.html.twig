{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonnces</h1>
        <table class="table table-hover"> 
            <thead>
                <tr>
                    <th>Id</th>
                    <th class="text-center">Titre</th>
                    <th class="text-center">Auteur</th>
                    <th>RÃ©servations</th>
                    <th>Note</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ad in pagination.data %}
                <tr>
                    <td>{{ ad.id }}</td>
                    <td class="text-center">{{ ad.title }}</td>
                    <td>
                        <img src="{{ ad.author.picture }}" alt="avatar" class="avatar avatar-mini mr-2">
                        {{ ad.author.fullName }}
                    </td>
                    <td class="text-center">
                        <span class="badge badge-warning rounded"> {{ ad.bookings |length }} </span>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-secondary rounded">{{ ad.avgRatings| number_format(1, ',', ' ') }}</span>
                    </td>
                    <td>
                        <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary"><i class="fas fa-edit"> </i></a>
                        <a href="" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
