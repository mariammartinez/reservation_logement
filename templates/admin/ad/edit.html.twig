{% extends 'admin/base.html.twig' %}

{% block title %} Modification {{ ad.id}} {% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Modification {{ ad.title }}</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <div class="card-title"> Corriger l'annonce ?</div>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">
                            Modifier
                        </button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Les r√©servations</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for booking in ad.bookings %}
                            <tr>
                                <td>{{ booking.id }}</td>
                                <td>{{ booking.booker.fullName }}</td>
                                <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                                <td>
                                    <a href="" class="btn btn-primary">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                            {% endfor %}
                        </table>
                    </div>
                </div>
                    <div class="card bg-light mt-4">
                        <div class="card-header">
                            <h4 class="card-title">Les commentaires</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Voyageur</th>
                                    <th>note</th>
                                    <th>commentaire</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for comment in ad.comments %}
                                <tr>
                                    <td>{{ comment.id }}</td>
                                    <td>{{ comment.author.fullName }}</td>
                                    <td>{{ comment.rating}}</td>
                                    <td>{{ comment.content}}</td>
                                    <td>
                                        <a href="" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                                </tbody>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
            </div>
        {{ form_end(form) }}

    </div>


{% endblock %}

{% block _ad_images_widget %}
        {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_row %}
    <div id="block_{{ id }}">
        {{ form_widget(form) }}
    </div>
{% endblock %}
{% block _ad_images_entry_widget %}
        <div class="row align-items-center">
            <div class="col-4">
            {% if value %}
                <img src="{{ value.url }}" alt="img" class="img-fluid">
            {% endif %}

            </div>
            <div class="col-6">
                {{ form_row(form.caption) }}
            </div>
            <div class="col">
                   <button class="btn btn-success" data-action="delete" data-target="#block_{{ id }}">
                   <i class="fas fa-trash"></i>
</button>
            </div>
        </div>
{% endblock  %}
{% block javascripts %}
    <script >
            $(document).ready(function() {
                $('[data-action="delete"]').on('click', function(){
                    const target = this.dataset.target;
                   $(target).remove();

                });

            });
    </script>

{% endblock %}